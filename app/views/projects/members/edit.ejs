<% include ../../partials/detailHeader %>

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <!-- ============================== EDIT ==============================-->
    <div class="container">
        <br>
        <h1><strong>EDIT Members</strong></h1>
        <hr class="my-2">
        <br>
        <form action="" method="POST">
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Project Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="projectName" placeholder="Project Name"
                        name="projectName" value="<%- member.role %>" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Nama</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="nameMembers" placeholder="Project Name"
                        name="projectName" value="<%- member.fullname %>" item" disabled>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-2 col-form-label">
                    Jabatan
                </label>
                <div class="col-10">
                    <select class="custom-select" name="position">

                        <option value="">Choose the position ...</option>
                        <% position.forEach((item) => { %>
                        <option value="<%= item %>" <%= item == member.role ? ' selected' : '' %>><%= item %></option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <br>
            <button class="btn btn-success" type="submit">Save</button>
            <a href="/projects/members/<%= projectid %>" class="btn btn-warning">Cancel</a>
        </form>
    </div>
</main>

<% include ../../partials/detailFooter %>